---
// Subtle rising bubbles effect for deep sea atmosphere
interface Props {
  className?: string;
  intensity?: "light" | "medium";
}

const { className = "", intensity = "light" } = Astro.props;
const bubbleCount = intensity === "light" ? 8 : 12;
---

<div class:list={["bubbles-container", className]}>
  {Array.from({ length: bubbleCount }).map((_, i) => (
    <div
      class="bubble"
      style={`
        --delay: ${Math.random() * 15}s;
        --duration: ${15 + Math.random() * 10}s;
        --size: ${3 + Math.random() * 6}px;
        --left: ${Math.random() * 100}%;
        --drift: ${-30 + Math.random() * 60}px;
      `}
    />
  ))}
</div>

<style>
  .bubbles-container {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
  }

  .bubble {
    position: absolute;
    bottom: -20px;
    left: var(--left);
    width: var(--size);
    height: var(--size);
    background: radial-gradient(
      circle at 30% 30%,
      rgba(0, 206, 209, 0.15),
      rgba(0, 206, 209, 0.05) 50%,
      transparent 70%
    );
    border: 1px solid rgba(0, 206, 209, 0.1);
    border-radius: 50%;
    animation: rise var(--duration) var(--delay) infinite ease-in;
  }

  @keyframes rise {
    0% {
      transform: translateY(0) translateX(0) scale(1);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 0.8;
    }
    100% {
      transform: translateY(-100vh) translateX(var(--drift)) scale(0.8);
      opacity: 0;
    }
  }

  /* Only show on larger screens for performance */
  @media (max-width: 768px) {
    .bubble:nth-child(n+5) {
      display: none;
    }
  }
</style>
