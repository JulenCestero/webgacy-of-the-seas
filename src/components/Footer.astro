---
import SocialLinks from "./SocialLinks.astro";

const currentYear = new Date().getFullYear();

const footerLinks = [
  { href: "/", label: "Home" },
  { href: "/conciertos", label: "Conciertos" },
  { href: "/nosotros", label: "Nosotros" },
  { href: "/archivo", label: "Archivo" },
  { href: "/contacto", label: "Contacto" },
];
---

<footer class="bg-band-dark-100 border-t border-band-sea/20 mt-auto">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Logo y descripción -->
      <div class="space-y-4">
        <a href="/" class="inline-block">
          <img
            src="/images/logo/logo-horizontal.png"
            alt="Legacy of the Seas"
            class="h-10 w-auto object-contain hover:brightness-125 transition-all"
          />
        </a>
        <p class="text-gray-400 text-sm">
          Navegando las aguas del metal desde tiempos inmemoriales.
        </p>
      </div>

      <!-- Links de navegación -->
      <div>
        <h3 class="font-metal text-band-sea text-sm uppercase tracking-wider mb-4">
          Navegación
        </h3>
        <ul class="space-y-2">
          {footerLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-gray-400 hover:text-band-sea text-sm transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Redes sociales -->
      <div>
        <h3 class="font-metal text-band-sea text-sm uppercase tracking-wider mb-4">
          Síguenos
        </h3>
        <SocialLinks size="md" />
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-band-sea/10 mt-8 pt-8 text-center">
      <p class="text-gray-500 text-sm">
        &copy; {currentYear} Legacy of the Seas. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
