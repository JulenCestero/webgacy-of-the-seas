---
import SocialLinks from "./SocialLinks.astro";

const currentYear = new Date().getFullYear();

const footerLinks = [
  { href: "/", label: "Home" },
  { href: "/conciertos", label: "Conciertos" },
  { href: "/nosotros", label: "Nosotros" },
  { href: "/contacto", label: "Contacto" },
];
---

<footer class="bg-band-dark-100 border-t border-band-gold/20 mt-auto">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Logo y descripción -->
      <div class="space-y-4">
        <a href="/" class="flex items-center gap-3">
          <div class="w-10 h-10 bg-band-red rounded-full flex items-center justify-center border-2 border-band-gold">
            <span class="font-metal text-band-gold text-lg font-bold">LS</span>
          </div>
          <span class="font-metal text-lg text-band-gold">Legacy of the Seas</span>
        </a>
        <p class="text-gray-400 text-sm">
          Navegando las aguas del metal desde tiempos inmemoriales.
        </p>
      </div>

      <!-- Links de navegación -->
      <div>
        <h3 class="font-metal text-band-gold text-sm uppercase tracking-wider mb-4">
          Navegación
        </h3>
        <ul class="space-y-2">
          {footerLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-gray-400 hover:text-band-gold text-sm transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Redes sociales -->
      <div>
        <h3 class="font-metal text-band-gold text-sm uppercase tracking-wider mb-4">
          Síguenos
        </h3>
        <SocialLinks size="md" />
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-band-gold/10 mt-8 pt-8 text-center">
      <p class="text-gray-500 text-sm">
        &copy; {currentYear} Legacy of the Seas. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
