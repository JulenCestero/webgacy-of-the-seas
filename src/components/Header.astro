---
import SocialLinks from "./SocialLinks.astro";

const navLinks = [
  { href: "/", label: "Home" },
  { href: "/conciertos", label: "Conciertos" },
  { href: "/nosotros", label: "Nosotros" },
  { href: "/tienda", label: "Tienda" },
  { href: "/archivo", label: "Archivo" },
  { href: "/contacto", label: "Contacto" },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-band-dark/95 backdrop-blur-sm border-b border-band-sea/20">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center group">
        <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-band-dark/50 border border-band-sea/30 flex items-center justify-center overflow-hidden shadow-[0_0_15px_rgba(0,206,209,0.2)] group-hover:shadow-[0_0_25px_rgba(0,206,209,0.4)] group-hover:border-band-sea/50 transition-all duration-300">
          <img
            src="/images/logo/logo-ls.png"
            alt="Legacy of the Seas"
            class="w-full h-full object-contain p-1"
          />
        </div>
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center gap-8">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class:list={[
                "font-metal text-sm uppercase tracking-widest transition-colors duration-300",
                currentPath === link.href
                  ? "text-band-sea"
                  : "text-gray-300 hover:text-band-sea",
              ]}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>

      <!-- Social Links (Desktop) -->
      <div class="hidden lg:block">
        <SocialLinks size="sm" />
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-gray-300 hover:text-band-sea transition-colors"
        aria-label="Abrir menÃº"
        aria-expanded="false"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-band-sea/20 pt-4">
      <ul class="flex flex-col gap-4">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class:list={[
                "block font-metal text-sm uppercase tracking-widest transition-colors duration-300",
                currentPath === link.href
                  ? "text-band-sea"
                  : "text-gray-300 hover:text-band-sea",
              ]}
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>

<!-- Spacer para compensar el header fixed -->
<div class="h-20"></div>

<script>
  const menuBtn = document.getElementById("mobile-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");

  menuBtn?.addEventListener("click", () => {
    const isExpanded = menuBtn.getAttribute("aria-expanded") === "true";
    menuBtn.setAttribute("aria-expanded", String(!isExpanded));
    mobileMenu?.classList.toggle("hidden");
  });
</script>
