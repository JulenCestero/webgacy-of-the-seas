---
interface Props {
  title?: string;
  subtitle?: string;
  logoSrc?: string;
  backgroundImage?: string;
}

const {
  title = "Legacy of the Seas",
  subtitle = "Metal Sinfónico desde Donostia",
  logoSrc,
  backgroundImage = "/images/band/band-photo.jpg"
} = Astro.props;

const hasLogo = logoSrc && logoSrc.length > 0;
---

<section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
  <!-- Background with band photo -->
  <div class="absolute inset-0 z-0">
    <img
      src={backgroundImage}
      alt=""
      loading="eager"
      decoding="async"
      class="absolute inset-0 w-full h-full object-cover object-[center_15%]"
    />
    <!-- Dark overlay with sea-tinted gradient -->
    <div class="absolute inset-0 bg-gradient-to-b from-band-dark/80 via-band-dark/70 to-band-dark"></div>
    <!-- Teal/sea color accent overlay -->
    <div class="absolute inset-0 bg-gradient-to-tr from-band-sea/10 via-transparent to-band-gold/5"></div>
  </div>

  <!-- Decorative elements - sea themed -->
  <div class="absolute inset-0 z-[1] overflow-hidden pointer-events-none">
    <!-- Glowing orbs -->
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-band-sea/20 rounded-full blur-[100px] animate-pulse"></div>
    <div class="absolute bottom-1/3 right-1/4 w-80 h-80 bg-band-gold/10 rounded-full blur-[80px]"></div>
    <!-- Subtle wave pattern -->
    <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-band-sea/5 to-transparent"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 w-full text-center">
    <!-- SEO: Hidden H1 for search engines -->
    <h1 class="sr-only">Legacy of the Seas - Banda de Metal Sinfónico</h1>

    <!-- Logo -->
    <div class="mb-8 mx-4 sm:mx-8 md:mx-[10%] lg:mx-[12%]">
      {hasLogo ? (
        <div class="relative">
          <div class="absolute inset-0 bg-band-sea/20 blur-[80px] rounded-full scale-90 animate-pulse"></div>
          <img
            src={logoSrc}
            alt="Legacy of the Seas"
            loading="eager"
            decoding="async"
            class="relative w-full h-auto block drop-shadow-[0_0_50px_rgba(0,206,209,0.5)] hover:drop-shadow-[0_0_70px_rgba(0,206,209,0.7)] transition-all duration-500"
          />
        </div>
      ) : (
        <div class="w-28 h-28 md:w-36 md:h-36 bg-band-dark/80 backdrop-blur-sm rounded-full flex items-center justify-center border-2 border-band-sea/50 shadow-[0_0_40px_rgba(0,206,209,0.3)] overflow-hidden">
          <span class="font-metal text-band-sea text-4xl md:text-5xl font-bold glow-sea">LS</span>
        </div>
      )}
    </div>

    <!-- Title (only shown if provided, displayed as h2 since H1 is sr-only above) -->
    {title && (
      <p class="text-5xl md:text-7xl lg:text-8xl font-metal text-gradient mb-6 leading-tight drop-shadow-2xl px-4" role="heading" aria-level="2">
        {title}
      </p>
    )}

    <!-- Subtitle -->
    <p class="text-xl md:text-2xl text-gray-200 mb-10 max-w-2xl mx-auto font-light tracking-wide px-4">
      {subtitle}
    </p>

    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center px-4">
      <a href="#escuchanos" class="btn-primary flex items-center gap-2 text-lg">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
        </svg>
        Escuchar
      </a>
      <a href="/conciertos" class="btn-secondary flex items-center gap-2 text-lg">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        Próximo Concierto
      </a>
    </div>
  </div>

  <!-- Scroll indicator - positioned relative to the section, not the content container -->
  <a href="#escuchanos" class="absolute bottom-6 left-1/2 -translate-x-1/2 z-20 animate-bounce opacity-70 hover:opacity-100 transition-opacity">
    <svg class="w-8 h-8 text-band-sea" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
    </svg>
  </a>
</section>
