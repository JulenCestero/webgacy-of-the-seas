---
interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Legacy of the Seas",
  subtitle = "Navegando las aguas del metal desde tiempos inmemoriales"
} = Astro.props;
---

<section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
  <!-- Background with overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-band-dark via-band-dark-50 to-band-dark z-0">
    <!-- Decorative elements -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-band-red rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-band-gold rounded-full blur-3xl"></div>
    </div>
    <!-- Grid pattern overlay -->
    <div class="absolute inset-0 bg-[linear-gradient(rgba(212,175,55,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(212,175,55,0.03)_1px,transparent_1px)] bg-[size:50px_50px]"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 container mx-auto px-4 text-center">
    <!-- Logo/Icon -->
    <div class="mb-8 flex justify-center">
      <div class="w-24 h-24 md:w-32 md:h-32 bg-band-dark-100 rounded-full flex items-center justify-center border-4 border-band-gold shadow-[0_0_30px_rgba(212,175,55,0.3)]">
        <span class="font-metal text-band-gold text-4xl md:text-5xl font-bold">LS</span>
      </div>
    </div>

    <!-- Title -->
    <h1 class="text-5xl md:text-7xl lg:text-8xl font-metal text-gradient mb-6 leading-tight">
      {title}
    </h1>

    <!-- Subtitle -->
    <p class="text-xl md:text-2xl text-gray-300 mb-10 max-w-2xl mx-auto">
      {subtitle}
    </p>

    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a href="#spotify" class="btn-primary flex items-center gap-2 text-lg">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
        </svg>
        Escuchar
      </a>
      <a href="/conciertos" class="btn-secondary flex items-center gap-2 text-lg">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        Pr√≥ximo Concierto
      </a>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-band-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </div>
</section>
