---
import { Image } from "astro:assets";

interface Props {
  name: string;
  role: string;
  image?: string;
  bio?: string;
}

const { name, role, image, bio } = Astro.props;

// Check if image exists
const hasImage = image && image.length > 0;

// Convert markdown-style bio to simple HTML paragraphs
const bioHtml = bio ? bio.split('\n\n').map(p => `<p>${p.trim()}</p>`).join('') : '';
---

<article
  class="group w-40 sm:w-48 cursor-pointer"
  data-member
  data-member-name={name}
  data-member-role={role}
  data-member-image={image || ''}
  data-member-bio={bioHtml}
>
  <div class="relative overflow-hidden rounded-lg bg-band-dark-100 border border-band-sea/20 hover:border-band-sea/50 transition-all">
    <!-- Image container with aspect ratio -->
    <div class="aspect-[3/4] relative overflow-hidden">
      {hasImage ? (
        <!-- Real image with lazy loading -->
        <img
          src={image}
          alt={`${name} - ${role}`}
          loading="lazy"
          decoding="async"
          class="absolute inset-0 w-full h-full object-cover object-top"
        />
      ) : (
        <!-- Placeholder background -->
        <div class="absolute inset-0 bg-gradient-to-b from-band-dark-50 to-band-dark flex items-center justify-center">
          <svg class="w-20 h-20 text-band-sea/30" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
          </svg>
        </div>
      )}

      <!-- Overlay gradient -->
      <div class="absolute inset-0 bg-gradient-to-t from-band-dark via-transparent to-transparent opacity-80"></div>
    </div>

    <!-- Content -->
    <div class="absolute bottom-0 left-0 right-0 p-4">
      <h3 class="font-metal text-lg text-band-sea group-hover:text-white transition-colors">
        {name}
      </h3>
      <p class="text-sm text-gray-400 uppercase tracking-wider">
        {role}
      </p>
    </div>

    <!-- Click indicator -->
    <div class="absolute inset-0 flex items-center justify-center bg-band-dark/60 opacity-0 group-hover:opacity-100 transition-opacity">
      <span class="text-band-sea text-sm font-medium flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
        </svg>
        Ver perfil
      </span>
    </div>
  </div>
</article>
