---
interface Props {
  name: string;
  description: string;
  image?: string;
  price?: string;
  buyUrl?: string;
}

const { name, description, image, price, buyUrl } = Astro.props;
const hasStock = buyUrl && buyUrl.trim() !== "";
---

<article class="merch-card group relative overflow-hidden rounded-lg border border-band-sea/20 bg-band-dark-100 transition-all duration-300 hover:border-band-sea/40">
  <!-- Image container -->
  <div class="relative aspect-square overflow-hidden">
    {image ? (
      <img
        src={image}
        alt={name}
        class:list={[
          "w-full h-full object-cover transition-all duration-500",
          !hasStock && "grayscale group-hover:grayscale"
        ]}
        loading="lazy"
        decoding="async"
      />
    ) : (
      <div class="w-full h-full bg-band-dark-200 flex items-center justify-center">
        <svg class="w-16 h-16 text-band-sea/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
    )}

    <!-- Out of stock overlay -->
    {!hasStock && (
      <div class="absolute inset-0 bg-band-dark/70 flex items-center justify-center">
        <span class="text-lg font-metal text-gray-400 uppercase tracking-wider">
          Sin Stock
        </span>
      </div>
    )}
  </div>

  <!-- Content -->
  <div class="p-4">
    <h3 class="text-lg font-metal text-white mb-2 line-clamp-2">
      {name}
    </h3>
    <p class="text-sm text-gray-400 mb-4 line-clamp-2">
      {description}
    </p>

    <div class="flex items-center justify-between">
      {price && (
        <span class="text-band-gold font-semibold">
          {price}
        </span>
      )}

      {hasStock ? (
        <a
          href={buyUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="btn-primary text-sm px-4 py-2"
        >
          Comprar
        </a>
      ) : (
        <a
          href="/contacto"
          class="btn-secondary text-sm px-4 py-2"
        >
          Cont√°ctanos
        </a>
      )}
    </div>
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
