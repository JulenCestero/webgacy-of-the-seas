  <div class="admin-layout">
    <aside class="admin-sidebar">
      <a href="/admin" class="admin-logo">
        <img src="/images/logo/logo-ls.png" alt="LS" />
        <span>Admin Panel</span>
      </a>

      <nav class="admin-nav">
        {navItems.map((item) => (
          <a href={item.href} class:list={[{ active: isActive(item.href) }]}>
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.icon} />
            </svg>
            {item.label}
          </a>
        ))}
      </nav>

      <div style="margin-top: auto; padding-top: 2rem;">
        <a href="/" class="admin-nav">
          <span style="display: flex; align-items: center; gap: 0.75rem; padding: 0.75rem 1rem; color: var(--admin-muted); font-size: 0.875rem;">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 20px; height: 20px;">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Ver sitio web
          </span>
        </a>
      </div>
    </aside>

    <main class="admin-content">
      <slot />
    </main>
  </div>
