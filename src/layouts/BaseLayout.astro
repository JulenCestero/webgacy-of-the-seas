---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Legacy of the Seas - Banda de Metal",
  image = "/og-image.jpg",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title} | Legacy of the Seas</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | Legacy of the Seas`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | Legacy of the Seas`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site)} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Netlify Identity Widget (for CMS authentication) -->
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>

    <!-- Schema.org MusicGroup -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "MusicGroup",
      "name": "Legacy of the Seas",
      "description": "Banda de Metal épico con temática náutica",
      "url": Astro.site?.toString(),
      "genre": ["Heavy Metal", "Epic Metal"],
      "foundingLocation": {
        "@type": "Place",
        "name": "España"
      },
      "sameAs": [
        "https://instagram.com/legacyoftheseas",
        "https://facebook.com/legacyoftheseas",
        "https://youtube.com/@legacyoftheseas",
        "https://open.spotify.com/artist/legacyoftheseas"
      ]
    })} />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />

    <!-- Netlify Identity handler -->
    <script is:inline>
      if (window.netlifyIdentity) {
        // Redirect to admin after login or signup
        window.netlifyIdentity.on("login", () => {
          document.location.href = "/admin/";
        });

        // Check for invite/recovery token in URL and open modal
        const hash = window.location.hash;
        if (hash.includes("invite_token") || hash.includes("recovery_token") || hash.includes("confirmation_token")) {
          window.netlifyIdentity.open();
        }
      }
    </script>
  </body>
</html>
