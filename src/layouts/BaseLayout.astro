---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SideBubbles from "../components/SideBubbles.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Legacy of the Seas - Banda de Metal",
  image = "/og-image.jpg",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title} | Legacy of the Seas</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | Legacy of the Seas`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | Legacy of the Seas`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site)} />

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/favicon-192.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Netlify Identity Widget (for CMS authentication) -->
    <script src="https://unpkg.com/netlify-identity-widget@1.9.2/build/netlify-identity-widget.js"></script>

    <!-- Schema.org MusicGroup -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "MusicGroup",
      "name": "Legacy of the Seas",
      "description": "Banda de Epic Metal de Donostia con influencias folk, symphonic y power",
      "url": Astro.site?.toString(),
      "genre": ["Epic Metal", "Folk Metal", "Symphonic Metal", "Power Metal"],
      "foundingDate": "2010",
      "foundingLocation": {
        "@type": "Place",
        "name": "Donostia, Euskadi, EspaÃ±a"
      },
      "sameAs": [
        "https://instagram.com/legacy.of.the.seas",
        "https://www.facebook.com/legacy.of.the.seas/",
        "https://www.youtube.com/@legacyoftheseas",
        "https://open.spotify.com/artist/0VfU5iDeWVTKfvhyos3Sih",
        "https://legacy-of-the-seas.bandcamp.com/",
        "https://tiktok.com/@legacy.of.the.seas",
        "https://x.com/legacyoftheseas"
      ]
    })} />
  </head>
  <body class="min-h-screen flex flex-col">
    <SideBubbles />
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />

    <!-- Netlify Identity handler -->
    <script is:inline>
      function initIdentity() {
        const identity = window.netlifyIdentity;
        if (!identity) return;

        // Redirect to admin after login or signup
        identity.on("login", () => {
          document.location.href = "/admin/";
        });

        // Check for invite/recovery token in URL and open modal
        const hash = window.location.hash;
        if (hash.includes("invite_token") || hash.includes("recovery_token") || hash.includes("confirmation_token")) {
          identity.open();
        }
      }

      // Run when widget is ready
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", initIdentity);
      } else {
        document.addEventListener("DOMContentLoaded", () => {
          if (window.netlifyIdentity) {
            window.netlifyIdentity.on("init", initIdentity);
          }
        });
      }
    </script>
  </body>
</html>
