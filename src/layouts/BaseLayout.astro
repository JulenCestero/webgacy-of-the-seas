---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SideBubbles from "../components/SideBubbles.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Legacy of the Seas - Banda de Metal",
  image = "/og-image.jpg",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- SEO -->
    <title>{title} | Legacy of the Seas</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="alternate" hreflang="es" href={canonicalURL} />
    <link rel="alternate" hreflang="es-ES" href={canonicalURL} />
    <link rel="alternate" hreflang="x-default" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | Legacy of the Seas`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="Legacy of the Seas" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | Legacy of the Seas`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site)} />

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/favicon-192.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Preconnect for Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" media="print" onload="this.media='all'" />
    <link rel="preload" href="/images/band/band-photo.webp" as="image" type="image/webp" />

    <!-- Schema.org WebSite -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "Legacy of the Seas",
      "url": Astro.site?.toString(),
      "publisher": {
        "@type": "MusicGroup",
        "name": "Legacy of the Seas"
      }
    })} />

    <!-- Schema.org MusicGroup -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "MusicGroup",
      "name": "Legacy of the Seas",
      "description": "Banda de Metal Sinfónico de Donostia con influencias folk, symphonic y power",
      "url": Astro.site?.toString(),
      "genre": ["Metal Sinfónico", "Folk Metal", "Symphonic Metal", "Power Metal"],
      "foundingDate": "2010",
      "foundingLocation": {
        "@type": "Place",
        "name": "Donostia, Euskadi, España"
      },
      "sameAs": [
        "https://instagram.com/legacy.of.the.seas",
        "https://www.facebook.com/legacy.of.the.seas/",
        "https://www.youtube.com/@legacyoftheseas",
        "https://open.spotify.com/artist/0VfU5iDeWVTKfvhyos3Sih",
        "https://legacy-of-the-seas.bandcamp.com/",
        "https://tiktok.com/@legacy.of.the.seas",
        "https://x.com/legacyoftheseas"
      ]
    })} />
  </head>
  <body class="min-h-screen flex flex-col">
    <SideBubbles />
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
