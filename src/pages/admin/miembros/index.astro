---
import AdminLayout from "../../../layouts/AdminLayout.astro";
import { createDb, members } from "../../../lib/db";
import { asc } from "drizzle-orm";


// Get runtime env from Cloudflare
const runtimeEnv = Astro.locals.runtime?.env as Record<string, string> | undefined;
const db = createDb(runtimeEnv);
const allMembers = await db.select().from(members).orderBy(asc(members.order));
---

<AdminLayout title="Miembros">
  <div class="admin-header" style="display: flex; justify-content: space-between; align-items: center;">
    <div>
      <h1 class="admin-title">Miembros</h1>
      <p class="admin-subtitle">Gestiona los miembros de la banda</p>
    </div>
    <a href="/admin/miembros/nuevo" class="btn btn-primary">
      <svg style="width: 16px; height: 16px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      Nuevo miembro
    </a>
  </div>

  <div class="card" style="padding: 0; overflow: hidden;">
    {allMembers.length > 0 ? (
      <div class="table-container">
        <table class="table">
          <thead>
            <tr>
              <th style="width: 60px;">Orden</th>
              <th style="width: 60px;">Imagen</th>
              <th>Nombre</th>
              <th>Rol</th>
              <th style="text-align: right;">Acciones</th>
            </tr>
          </thead>
          <tbody>
            {allMembers.map((member) => (
              <tr>
                <td style="text-align: center; color: var(--admin-muted);">{member.order}</td>
                <td>
                  {member.image ? (
                    <img src={member.image} alt={member.name} style="width: 40px; height: 40px; object-fit: cover; border-radius: 50%;" />
                  ) : (
                    <div style="width: 40px; height: 40px; background: var(--admin-border); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                      <svg style="width: 20px; height: 20px; color: var(--admin-muted);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                    </div>
                  )}
                </td>
                <td style="font-weight: 500;">{member.name}</td>
                <td style="color: var(--admin-muted);">{member.role}</td>
                <td style="text-align: right;">
                  <div class="actions" style="justify-content: flex-end;">
                    <a href={`/admin/miembros/${member.id}`} class="btn btn-secondary">Editar</a>
                    <form method="POST" action="/admin/api/members/delete" style="display: inline;">
                      <input type="hidden" name="id" value={member.id} />
                      <button type="submit" class="btn btn-danger" onclick="return confirm('Â¿Eliminar este miembro?')">
                        Eliminar
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    ) : (
      <div style="text-align: center; padding: 3rem;">
        <p style="color: var(--admin-muted); margin-bottom: 1rem;">No hay miembros registrados</p>
        <a href="/admin/miembros/nuevo" class="btn btn-primary">Crear el primero</a>
      </div>
    )}
  </div>
</AdminLayout>
