---
import { db, posts } from "../../lib/db";
import { eq } from "drizzle-orm";
import { marked } from "marked";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Lightbox from "../../components/Lightbox.astro";

// Get slug from URL params
const { slug } = Astro.params;

// Fetch post from database
const result = await db.select().from(posts).where(eq(posts.slug, slug!)).limit(1);
const post = result[0];

// 404 if not found
if (!post) {
  return Astro.redirect("/404");
}

// Parse JSON arrays
function parseJsonArray(str: string | null): string[] {
  if (!str) return [];
  try {
    return JSON.parse(str);
  } catch {
    return [];
  }
}

const tags = parseJsonArray(post.tags);
const gallery = parseJsonArray(post.gallery);

// Render markdown content
const htmlContent = post.body ? marked(post.body) : "";

// Format date
const formattedDate = new Date(post.date).toLocaleDateString("es-ES", {
  day: "numeric",
  month: "long",
  year: "numeric",
});
---

<BaseLayout title={post.title} description={post.excerpt || `${post.title} - Legacy of the Seas`}>
  <article class="py-16 bg-band-dark">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <!-- Back link -->
        <a
          href="/archivo"
          class="inline-flex items-center gap-2 text-band-sea hover:text-band-gold transition-colors mb-8"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"/>
          </svg>
          Volver al archivo
        </a>

        <!-- Header -->
        <header class="mb-8">
          <!-- Date & Tags -->
          <div class="flex items-center gap-3 mb-4">
            <time class="text-band-sea">{formattedDate}</time>
            {tags.length > 0 && (
              <span class="text-gray-600">•</span>
              <div class="flex gap-2">
                {tags.map((tag: string) => (
                  <span class="text-xs text-gray-400 uppercase tracking-wider px-2 py-1 bg-band-dark-100 rounded">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </div>

          <!-- Title -->
          <h1 class="text-3xl md:text-5xl font-metal text-gradient mb-6">
            {post.title}
          </h1>

          <!-- Excerpt -->
          {post.excerpt && (
            <p class="text-xl text-gray-300 leading-relaxed">
              {post.excerpt}
            </p>
          )}
        </header>

        <!-- Featured image -->
        {post.image && (
          <div class="mb-10 rounded-lg overflow-hidden border border-band-sea/20">
            <img
              src={post.image}
              alt={post.title}
              class="w-full h-auto"
            />
          </div>
        )}

        <!-- Content -->
        <div class="prose prose-lg max-w-none" set:html={htmlContent} />

        <!-- Gallery -->
        {gallery.length > 0 && (
          <div class="mt-12">
            <h2 class="text-2xl font-metal text-band-sea mb-6">Galería</h2>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
              {gallery.map((img: string, index: number) => (
                <a
                  href={img}
                  data-lightbox
                  class="block aspect-square overflow-hidden rounded-lg border border-band-sea/20 hover:border-band-sea/50 transition-all cursor-pointer"
                >
                  <img
                    src={img}
                    alt={`Foto ${index + 1}`}
                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                </a>
              ))}
            </div>
          </div>
        )}

        <!-- Footer -->
        <footer class="mt-12 pt-8 border-t border-band-sea/20">
          <a
            href="/archivo"
            class="inline-flex items-center gap-2 text-band-sea hover:text-band-gold transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"/>
            </svg>
            Volver al archivo
          </a>
        </footer>
      </div>
    </div>
  </article>
  <Lightbox />
</BaseLayout>
